@using Mausam.Models

<div class="rounded-2xl bg-white p-6 shadow-sm">
    <h3 class="text-lg font-semibold text-slate-800 mb-4">Weather Details</h3>
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        @if (CurrentWeather != null)
        {
            <div class="rounded-xl bg-slate-50 p-4">
                <div class="flex items-center gap-2 text-slate-600 mb-2">
                    <i class="fas fa-eye"></i>
                    <span class="text-sm">Visibility</span>
                </div>
                <div class="text-2xl font-semibold text-slate-900">@(CurrentWeather.Visibility ?? 0) km</div>
            </div>
            
            <div class="rounded-xl bg-slate-50 p-4">
                <div class="flex items-center gap-2 text-slate-600 mb-2">
                    <i class="fas fa-thermometer-half"></i>
                    <span class="text-sm">Feels like</span>
                </div>
                <div class="text-2xl font-semibold text-slate-900">@(CurrentWeather.ApparentTemperature ?? CurrentWeather.Temperature)°C</div>
            </div>
            
            <div class="rounded-xl bg-slate-50 p-4">
                <div class="flex items-center gap-2 text-slate-600 mb-2">
                    <i class="fas fa-percentage"></i>
                    <span class="text-sm">Humidity</span>
                </div>
                <div class="text-2xl font-semibold text-slate-900">@(CurrentWeather.RelativeHumidity ?? 0)%</div>
            </div>
            
            <div class="rounded-xl bg-slate-50 p-4">
                <div class="flex items-center gap-2 text-slate-600 mb-2">
                    <i class="fas fa-compress-arrows-alt"></i>
                    <span class="text-sm">Pressure</span>
                </div>
                <div class="text-2xl font-semibold text-slate-900">@(CurrentWeather.SurfacePressure ?? 0) hPa</div>
            </div>
            
            <div class="rounded-xl bg-slate-50 p-4">
                <div class="flex items-center gap-2 text-slate-600 mb-2">
                    <i class="fas fa-wind"></i>
                    <span class="text-sm">Wind Direction</span>
                </div>
                <div class="text-2xl font-semibold text-slate-900">@(CurrentWeather.WindDirection ?? 0)°</div>
            </div>
            
            <div class="rounded-xl bg-slate-50 p-4">
                <div class="flex items-center gap-2 text-slate-600 mb-2">
                    <i class="fas fa-cloud-rain"></i>
                    <span class="text-sm">Rain</span>
                </div>
                <div class="text-2xl font-semibold text-slate-900">@(CurrentWeather.Rain ?? 0) mm</div>
            </div>
        }
        else
        {
            <div class="col-span-full text-center py-8 text-slate-500">
                <i class="fas fa-info-circle text-4xl mb-2"></i>
                <div>Weather details will appear here</div>
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public CurrentWeather? CurrentWeather { get; set; }
}
